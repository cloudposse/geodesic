ifeq ($(LINT),)
NAMESPACE ?= $(shell basename $(abspath $(shell pwd)/../))
PACKAGES ?= $(shell $(HELM) list --short | xargs -n1 -I'{}' sh -c '[ -f $(HELM_VALUES_PATH)/$(NAMESPACE)/{}.yaml ] && echo {}')
endif

define chart-uninstall
	@$(HELM) delete $@ --purge
endef


## Uninstall configured packages for this namespace
all: $(PACKAGES)

info:
	@echo "Uninstallable packages: $(PACKAGES)"
