include helm/package

NAME ?= kube-lego
NAMESPACE ?= kube-system
PACKAGE ?= cloudposse-incubator/kube-lego

## Initialize Kube Lego (Let's Encrypt) Configuration
init: validate
	$(call $@)

## Edit Kube Lego (Let's Encrypt) Configuration
edit: validate
	$(call $@)

## Install Kube Lego (Let's Encrypt)
install: validate
	$(call $@)

## Uninstall Kube Lego (Let's Encrypt)
uninstall: validate
	$(call $@)

## Upgrade Kube Lego (Let's Encrypt)
upgrade: validate
	$(call $@)

