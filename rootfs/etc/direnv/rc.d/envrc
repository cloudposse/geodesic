# Usage: use_envrc [...]
#
# Load environment variables from all `*.envrc` files
# Any arguments given will be treated as a glob.
#
function use_envrc() {
	local wildcard="${1:-*.envrc}"
	# Export all .envrc files in the current directory
	
	for file in $wildcard; do
		[ -e "$wildcard" ] || break
		source_env $file
	done
}
